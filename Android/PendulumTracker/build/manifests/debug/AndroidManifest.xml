<manifest xmlns:android="http://schemas.android.com/apk/res/android" android:versionCode="26" android:versionName="2.1.4" package="edu.uml.cs.isense.pendulum">

    <uses-sdk android:minSdkVersion="11" android:targetSdkVersion="18"/>

    <uses-feature android:name="android.hardware.camera" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.autofocus" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front" android:required="false"/>
    <uses-feature android:name="android.hardware.camera.front.autofocus" android:required="false"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CAMERA"/>

    <application android:allowBackup="true" android:hardwareAccelerated="true" android:icon="@drawable/ic_launcher" android:label="@string/display_name" android:theme="@android:style/Theme.Holo">
        <activity android:configChanges="keyboardHidden|orientation" android:label="@string/display_name" android:name="edu.uml.cs.isense.pendulum.PendulumTrackerActivity" android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:label="@string/enter_name_prompt" android:name="edu.uml.cs.isense.credentials.EnterName" android:theme="@style/AppThemeDialog"/>
        <activity android:label="@string/login_prompt" android:name="edu.uml.cs.isense.credentials.Login" android:theme="@style/AppThemeDialog"/>
        <activity android:label="@string/login_error_prompt" android:name="edu.uml.cs.isense.credentials.LoginError" android:theme="@style/AppThemeDialog"/>
        <activity android:configChanges="screenSize|orientation" android:label="Credential Manager" android:name="edu.uml.cs.isense.credentials.CredentialManager" android:theme="@style/AppThemeDialog" android:windowSoftInputMode="adjustPan"/>
        <activity android:label="Add Contributor Key" android:name="edu.uml.cs.isense.credentials.CredentialManagerKey" android:theme="@style/AppThemeDialog"/>
        
    </application>

    <!--
         supports-screens android:resizeable="true"
                      android:smallScreens="true"
                      android:normalScreens="true"
                      android:largeScreens="true"
                      android:anyDensity="true" /
    -->

</manifest>
